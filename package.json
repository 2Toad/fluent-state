{
  "name": "@2toad/fluent-state",
  "version": "3.0.0",
  "description": "A fluent JavaScript State Machine with full TypeScript support",
  "homepage": "https://github.com/2Toad/fluent-state",
  "author": "2Toad",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "npx rimraf dist",
    "build": "npm run clean && npx tsc",
    "local": "npm run clean && nodemon src/index.ts",
    "test": "mocha -r ts-node/register tests/**/*.spec.ts",
    "test:watch": "mocha -r ts-node/register --watch --watch-files tests --watch-extensions ts 'tests/**/*.spec.ts'",
    "lint": "oxlint --fix",
    "lint:ci": "oxlint",
    "format": "prettier . --write",
    "prepublishOnly": "npm run lint && npm test && npm run build",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/2Toad/fluent-state.git"
  },
  "keywords": [
    "state machine"
  ],
  "devDependencies": {
    "@types/chai": "^4.3.20",
    "@types/chai-spies": "^1.0.6",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.14.1",
    "@types/sinon": "^17.0.4",
    "chai": "^4.5.0",
    "chai-spies": "^1.1.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "mocha": "^11.1.0",
    "nodemon": "^3.1.9",
    "oxlint": "^0.16.7",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "sinon": "^20.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "overrides": {
    "inflight": "^2.0.0",
    "glob": "^9.0.0"
  },
  "lint-staged": {
    "*.ts": "oxlint --fix",
    "*": "prettier --write"
  }
}
